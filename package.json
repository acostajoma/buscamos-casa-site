{
	"name": "buscamos-casa-site",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "pnpm partytown && vite dev",
		"build": "pnpm partytown && vite build",
		"build:preview": "vite build --mode preview",
		"build:production": "vite build --mode production",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"apply": "wrangler d1 migrations apply DB --local",
		"apply:preview": "wrangler d1 migrations apply DB --env preview --remote",
		"apply:production": "wrangler d1 migrations apply DB --env production --remote",
		"db:apply": "pnpm run db:generate && pnpm run apply",
		"deploy:preview": "pnpm build:preview && wrangler pages deploy --branch preview",
		"deploy:prod": "pnpm build:production && wrangler pages deploy",
		"partytown": "partytown copylib 'static/~partytown' --no-debug"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.6",
		"@eslint/compat": "^1.2.8",
		"@playwright/test": "^1.51.1",
		"@storybook/addon-essentials": "^8.6.12",
		"@storybook/addon-interactions": "^8.6.12",
		"@storybook/addon-svelte-csf": "5.0.0-next.21",
		"@storybook/blocks": "^8.6.12",
		"@storybook/svelte": "^8.6.12",
		"@storybook/sveltekit": "^8.6.12",
		"@storybook/test": "^8.6.12",
		"@sveltejs/adapter-cloudflare": "^7.0.1",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.1.4",
		"@tailwindcss/typography": "^0.5.16",
		"@types/glidejs__glide": "^3.6.6",
		"@types/google.maps": "^3.58.1",
		"autoprefixer": "^10.4.21",
		"drizzle-kit": "^0.22.8",
		"eslint": "^9.24.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"mdsvex": "^0.11.2",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"storybook": "^8.6.12",
		"svelte": "^5.27.0",
		"svelte-check": "^4.1.6",
		"sveltekit-flash-message": "^2.4.6",
		"sveltekit-superforms": "^2.24.1",
		"tailwindcss": "^4.1.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.30.1",
		"vite": "^5.4.18",
		"vitest": "^2.1.9",
		"wrangler": "^3.114.6",
		"zod": "^3.24.2"
	},
	"dependencies": {
		"@glidejs/glide": "^3.7.1",
		"@googlemaps/js-api-loader": "^1.16.8",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@qwik.dev/partytown": "^0.11.0",
		"@sentry/sveltekit": "^9.12.0",
		"arctic": "^2.3.4",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.33.0",
		"svelte-tel-input": "^3.6.0"
	}
}
