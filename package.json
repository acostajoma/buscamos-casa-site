{
	"name": "buscamos-casa-site",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"apply": "wrangler d1 migrations apply DB --local",
		"apply:preview": "wrangler d1 migrations apply DB --env preview --remote",
		"apply:production": "wrangler d1 migrations apply DB --env production --remote",
		"db:apply": "pnpm run db:generate && pnpm run apply",
		"pages:secrets:preview": "wrangler pages secret bulk secrets-preview.json --env preview",
		"pages:secrets:prod": "wrangler pages secret bulk secrets-prod.json --env production",
		"deploy:preview": "pnpm build && wrangler pages deploy --branch preview",
		"deploy:prod": "pnpm build && wrangler pages deploy"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.4",
		"@eslint/compat": "^1.2.5",
		"@playwright/test": "^1.50.0",
		"@storybook/addon-essentials": "^8.5.1",
		"@storybook/addon-interactions": "^8.5.1",
		"@storybook/addon-svelte-csf": "5.0.0-next.21",
		"@storybook/blocks": "^8.5.1",
		"@storybook/svelte": "^8.5.1",
		"@storybook/sveltekit": "^8.5.1",
		"@storybook/test": "^8.5.1",
		"@sveltejs/adapter-cloudflare": "^4.9.0",
		"@sveltejs/kit": "^2.16.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"@types/google.maps": "^3.58.1",
		"autoprefixer": "^10.4.20",
		"drizzle-kit": "^0.22.8",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"mdsvex": "^0.11.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"storybook": "^8.5.1",
		"svelte": "^5.19.2",
		"svelte-check": "^4.1.4",
		"sveltekit-flash-message": "^2.4.6",
		"sveltekit-superforms": "^2.23.1",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.21.0",
		"vite": "^5.4.14",
		"vitest": "^2.1.8",
		"wrangler": "^3.105.0",
		"zod": "^3.24.1"
	},
	"dependencies": {
		"@googlemaps/js-api-loader": "^1.16.8",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"arctic": "^2.3.4",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.33.0",
		"svelte-tel-input": "^3.5.2"
	}
}
